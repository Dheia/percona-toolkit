#!/bin/bash

DIR=$(dirname "$0")
source ${DIR}/env.sh 

db_version() {
    $CMD --quiet --eval 'db.serverBuildInfo().versionArray.slice(0,2).join(".")'
}

vendor_name() {
    vendor="mongo"
    ${CMD} --quiet --eval 'db.serverBuildInfo()' | grep -i 'psmdb' &>/dev/null
    if [ "$?" == "0" ]; then 
        vendor="psmdb"
    fi
    echo "$vendor"
}
